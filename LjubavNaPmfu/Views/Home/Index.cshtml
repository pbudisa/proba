@model IEnumerable<string>

@{
    ViewData["Title"] = "Home Page";
}

<div style="margin:100px auto">
    <div style="margin:0px auto; width:1000px;height:550px;">
        <div style="float:left;width:500px;height:500px;">
            <img src="~/d.png" width="500" />
        </div>
        <div id="prozor" style="float:left;width:500px;height:500px;background-color:#cd171fad;border-radius:60px;padding:100px 60px;">
            <h2 style="color:#fff;">Prijava:</h2>
            <p style="color:#fff;">@ViewBag.Messag2</p>
            <form asp-action="Index" style="margin:40px;color:#fff;">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" name="username" id="username" placeholder="username" />
                </div>
                <div class="form-group">
                    <label for="password">Password:&nbsp;</label>
                    <input type="password" name="password" id="password" placeholder="password"/>
                </div>
                <div class="form-group">
                    <label>&nbsp;Nemate račun? <a style="color:#fff;font-weight:bold;" asp-controller="Forma" asp-action="Register">Stvori ga</a></label>
                    <input type="submit" value="Login" class="cbp-vm-add2" style="border:none;margin-left:30px;" />
                </div>
            </form>
        </div>
    </div>
</div>