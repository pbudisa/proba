@model LjubavNaPmfu.Baza.Match

@{
    ViewData["Title"] = "Chat";
}

<h1>Chat</h1>
<a asp-action="MatchLista">Back to list</a>
<hr />
<div style="float:left;height:650px;">
    <textarea cols="100" rows="20" disabled></textarea><br />
    <input type="text" style="width:760px;" />
</div>
<div style="float:left;margin-left:50px;text-align:center;">
    <input type="button" onclick="Pop()" value="ASK ON DATE" />
</div>
<div id="pop" style="position:absolute;text-align:center;width:500px;height:300px;background-color:#ffffff;top:30%;left:30%;display:none;border:1px solid #000000;">
    <p style="margin-top:60px;">Odaberi datum i vrijeme Date-a</p>
    <input type="date" />
    <input type="time" /><br />
    <br />
    <br />
    <input type="button" onclick="Sakrij()" value="Pošalji"/>
    <input type="button" onclick="Sakrij()" value="Odbaci" />
</div>
<script type="text/javascript">
    function Pop() {
        document.getElementById('pop').style.display = 'block';
    }
    function Sakrij() {
        document.getElementById('pop').style.display = 'none';
    }
</script>
<style type="text/css">
    a {
        text-decoration: none;
        color: #cd171f;
        padding: 0px 5px;
    }

        a:hover {
            color: #000;
            text-decoration: none;
        }
</style>