@model IEnumerable<LjubavNaPmfu.Baza.Korisnik>

@{
    ViewData["Title"] = "Lista";
}

<h1>Korisnici</h1>
<div>
    <p>Kao Filter:</p>
    <a asp-action="Filter" asp-route-kategorija="Sport">Sport</a>
    <a asp-action="Filter" asp-route-kategorija="Kava">Kava</a>
    <a asp-action="Filter" asp-route-kategorija="Glazba">Glazba</a>
    <a asp-action="Filter" asp-route-kategorija="Životinje">Životinje</a>
    <a asp-action="Filter" asp-route-kategorija="Crtanje">Crtanje</a>
    <a asp-action="Filter" asp-route-kategorija="Plesanje">Plesanje</a>
    <a asp-action="Filter" asp-route-kategorija="Serije">Serije</a>
    <a asp-action="Filter" asp-route-kategorija="Pijevanje">Pijevanje</a>
    <a asp-action="Filter" asp-route-kategorija="Igrice">Igrice</a>
    <a asp-action="Filter" asp-route-kategorija="Putovanje">Putovanje</a>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omeni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobitel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omeni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobitel)
            </td>
            <td>
                <a asp-action="Match" asp-route-id="@item.Id">Match</a>
            </td>
            <td>
                <a asp-action="Odbij" asp-route-id="@item.Id">Odbij</a>
            </td>
            
        </tr>
}
    </tbody>
</table>

