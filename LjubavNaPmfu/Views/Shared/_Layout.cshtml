@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LjubavNaPmfu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon/favicon-32x32.png">

    <style type="text/css">
        .izbornik a, .izbornik a:visited {
            color: #fff;
        }
    </style>

</head>
<body>
    <header>
        <nav  id="nav2" class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #cd171f;text-align:center;">
            <div class="container">
                @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "korisnik")
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Hobiji" asp-action="Lista"><img width="50" src="~/logo-bili.png" /></a>

                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img width="50" src="~/logo-bili.png" /></a>

                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 izbornik">
                        @Html.Partial("Izbornik")
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <p style="color:#cd171f;">&copy; 2021 - LjubavNaPmfu</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
